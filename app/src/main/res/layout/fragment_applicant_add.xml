<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".view.fragments.ApplicantAddFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:paddingTop="30dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="3dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_applicant"
                android:textColor="@color/text_color"
                android:textSize="36sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/surname_input_layout"
                android:layout_width="450dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="@string/surname"
                android:textColor="#11618F"
                android:textColorHint="#11618F">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/surname_input_editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#11618F" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/name_input_layout"
                android:layout_width="450dp"
                android:layout_height="wrap_content"
                android:hint="@string/name"
                android:textColorHint="#11618F">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/name_input_editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#11618F" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/phone_input_layout"
                android:layout_width="450dp"
                android:layout_height="wrap_content"
                android:hint="@string/phone"
                android:textColorHint="#11618F">


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/phone_input_editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="phone"
                    android:textColor="#11618F" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/mail_input_layout"
                android:layout_width="450dp"
                android:layout_height="wrap_content"
                android:hint="@string/mail"
                android:textColorHint="#11618F">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/mail_input_editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:textColor="#11618F" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />
    </FrameLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="3"
        android:paddingTop="30dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="3dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cvText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/cv_picture"
                    android:textColor="#11618F"
                    android:textSize="36sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/cv_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/take_cv_picture" />

                <ImageView
                    android:id="@+id/cv_display"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/cv_picture_description"
                    android:maxWidth="125dp"
                    android:maxHeight="175dp"
                    android:scaleType="fitCenter"
                    android:tag="@string/add_CV"
                    app:srcCompat="@drawable/ic_add_picture_background" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|top"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_start"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:background="@drawable/rounded_button"
                    android:elevation="1dp"
                    android:padding="15dp"
                    android:text="@string/start_interview"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>