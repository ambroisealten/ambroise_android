<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:orientation="vertical"
    tools:context=".view.fragments.ApplicantMobilityFragment">

    <TextView
        android:layout_width="362dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="@string/other_infos"
        android:textColor="#000000"
        android:textSize="50sp"
        android:layout_marginTop="18dp" />

    <CheckBox
        android:id="@+id/license_checkbox"
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/driving_license" />

    <CheckBox
        android:id="@+id/vehicle_checkbox"
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="@string/has_vehicle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="@string/wage_expectation" />

        <EditText
            android:id="@+id/wage_expectation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:autofillHints="@string/wage_expectation"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/wage_currency" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/nationality" />

        <RadioGroup
            android:id="@+id/group_nationality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkedButton="@id/french_nationality"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/french_nationality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:tag="@string/french_nationality"
                android:text="@string/french_nationality" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:tag="@string/european_citizenship"
                android:text="@string/european_citizenship" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:tag="@string/other_nationality"
                android:text="@string/other_nationality" />
        </RadioGroup>
    </LinearLayout>

</LinearLayout>